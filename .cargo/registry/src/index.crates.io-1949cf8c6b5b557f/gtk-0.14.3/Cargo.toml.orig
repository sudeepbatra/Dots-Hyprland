[package]
documentation = "https://gtk-rs.org/gtk3-rs/stable/latest/docs/gtk/"
categories = ["api-bindings", "gui"]
license = "MIT"
description = "Rust bindings for the GTK+ 3 library"
name = "gtk"
homepage = "https://gtk-rs.org/"
authors = ["The gtk-rs Project Developers"]
readme = "README.md"
version = "0.14.3"
keywords = ["gtk", "gtk-rs", "gnome", "GUI"]
repository = "https://github.com/gtk-rs/gtk3-rs"
build = "build.rs"
exclude = [
    "gir-files/*",
]
edition = "2018"

[lib]
name = "gtk"

[features]
v3_20 = ["ffi/v3_20"]
v3_22 = ["v3_20", "ffi/v3_22", "gdk/v3_22"]
v3_22_20 = ["v3_22", "ffi/v3_22"]
v3_22_26 = ["v3_22_20", "ffi/v3_22_26"]
v3_22_27 = ["v3_22_26", "ffi/v3_22_27"]
v3_22_29 = ["v3_22_27", "ffi/v3_22_29"]
v3_22_30 = ["v3_22_29", "ffi/v3_22_30"]
v3_24 = ["v3_22_30", "ffi/v3_24"]
v3_24_8 = ["v3_24", "ffi/v3_24_8"]
v3_24_9 = ["v3_24_8", "ffi/v3_24_9"]
dox = ["gdk/dox", "ffi/dox"]

[package.metadata.docs.rs]
features = ["dox"]

[build-dependencies]
pkg-config = "0.3.7"

[dependencies]
libc = "0.2"
bitflags = "1.0"
field-offset = "0.3"
futures-channel = "0.3"
once_cell = "1.0"
atk = {version = "0.14.0", path = "../atk" }
ffi = {package = "gtk-sys", path = "./sys", version = "0.14.0"}
gtk3-macros = {version = "0.14.0", path = "./../gtk3-macros"}
cairo-rs = "0.14.0"
gio = "0.14.0"
glib = "0.14.0"
gdk = {version = "0.14.0", path = "./../gdk" }
gdk-pixbuf = "0.14.0"
pango = "0.14.0"

[dev-dependencies]
gir-format-check = "^0.1"
